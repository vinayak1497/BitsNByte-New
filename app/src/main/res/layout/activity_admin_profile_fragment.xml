<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilebkg"
    tools:context=".AdminProfileFragment">

    <ImageView
        android:id="@+id/adminProfileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/bitslogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/canteenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sai Pooja Canteen"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/adminProfileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/detailsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_background"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/canteenName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Location"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APSIT 1st Floor near Stationary"
            android:textColor="@color/grey"
            android:layout_marginBottom="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏰ Timing"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/timingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:00 AM to 5:00 PM"
            android:textColor="@color/grey"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💰 Total Earnings"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/earningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculating..."
            android:textColor="@color/grey"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
